<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="115dp"
                    android:layout_height="117dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="48dp"
                    app:layout_constraintEnd_toEndOf="@+id/tableRow"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="@+id/tableRow"
                    app:layout_constraintTop_toTopOf="@id/tableRow"
                    app:srcCompat="@drawable/gatinha_edit" />
                <TableRow
                    android:id="@+id/tableRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:layout_constraintVertical_bias="0.110000014">
                    <EditText
                        android:id="@+id/editText1"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:textSize="14sp" />
                    <ImageButton
                        android:id="@+id/imageButton1"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2dp"
                        android:background="#FFFFFF"
                        android:scaleType="fitCenter"
                        android:theme="@style/ImagineButtonGathina"
                        app:srcCompat="@drawable/galochka" />
                </TableRow>
                <TextView
                    android:id="@+id/textView_settings"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:maxLength="500"
                    android:textColor=" #8c8077 "
                    android:textSize="20dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tableRow"
                    app:layout_constraintHorizontal_bias="0.700"
                    app:layout_constraintStart_toStartOf="@+id/tableRow"
                    app:layout_constraintTop_toBottomOf="@+id/tableRow"
                    app:layout_constraintVertical_bias="0.100000024" />
            </LinearLayout>
        </ScrollView>
        <ImageView
            android:id="@+id/imageV4_new_words"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="right|end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/strelochka" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>